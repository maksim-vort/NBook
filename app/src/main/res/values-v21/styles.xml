<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="android:colorAccent">@color/accent</item>
	</style>
	<style name="button">
		<item name="android:padding">0dp</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:minHeight">36dp</item>
		<item name="android:layout_margin">3dp</item>
		<item name="android:elevation">1dp</item>
		<item name="android:translationZ">1dp</item>
		<item name="android:background">@drawable/ripple_2</item>
	</style>
	<style name="card">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/ripple_2</item>
		<item name="android:elevation">1dp</item>
		<item name="android:padding">10dp</item>
		<item name="android:textColor">@color/accent</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="panel">
		<item name="android:background">@color/panel</item>
		<item name="android:elevation">3dp</item>
	</style>
	<style name="accent_text">
		<item name="android:textColor">@color/accent</item>
	</style>
	<style name="panel_text">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">25sp</item>
		<item name="android:layout_gravity">center_vertical</item>
		
	</style>
	<style name="lesson_text">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:background">@drawable/textbg</item>
		<item name="android:textIsSelectable">false</item>
	</style>
	<style name="lesson_code">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/accent</item>
		<item name="android:elevation">1dp</item>
		<item name="android:background">@drawable/codebg</item>
		<item name="android:textIsSelectable">true</item>
	</style>
	<style name="lesson_image">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>
	<style name="searchbar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/searchbar</item>
		<item name="android:elevation">2dp</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="item">
		<item name="android:background">@drawable/ripple_2</item>
	</style>
</resources>
